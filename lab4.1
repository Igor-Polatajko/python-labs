#!/usr/bin/env python
from math import *


def get_validated_input():
	a = float(input("Enter a: "))
	b = float(input("Enter b: "))

	if b == 0:
		raise ValueError
	return a, b;		


def calc_function(a, b):
	return (sqrt((a * b)) / (exp(a) * b)) + (a * exp((2 * a) / b))


if __name__ == '__main__':
	try:
		a, b = get_validated_input()
		print("Result: ", calc_function(a, b))
	except ValueError:
		print("Incorrect input!")		
